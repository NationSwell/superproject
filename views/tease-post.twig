<article class="story story--tease story--tease--{{ post.content_type }}">
    <a href="{{ post.permalink }}" class="link-wrapper">
        {% if post.thumbnail is not empty %}
        <figure class="story__feature">
            <img src="{{ post.thumbnail.src|resize(748, 421) }}" alt="{{ post.thumbnail._wp_attachment_image_alt }}"/>

            {% if post.content_type in ['video','audio','photo','listory'] %}
            <div class="type-indicator-container">
                <span class="icon icon_{{ post.content_type }} type-indicator"></span>
            </div>
            {% endif %}
        </figure>
        {% endif %}

        <header class="story__header">
            <span class="rubric">{{ post.category }}</span>
            <h2 class="hd-d story__hed">{{ post.tout_title }}</h2>

            {% block dek %}
            <p class="story__dek">{{ post.tout_dek_text }}</p>
            {% endblock %}

            {% if post.call_to_action is not empty and post.call_to_action.show_action_stats_on_tout != '0' %}
                {% include ['action-stats-'~post.call_to_action.type~'.twig', 'action-stats.twig'] %}
            {% endif %}
        </header>
    </a>
</article>