{% extends "base.twig" %}

{% block content %}
    <!-- image hero -->
    {% if post.story_header|length == 1 %}
        {% if post.story_header[0].type == 'image' %}
            <div class="hero hero--story hero--image" style="background-image: url({{ post.story_header[0].url|resize(1300, 600) }});">
                <div class="hero-information">
                    <span class="icon icon_information hero-information__toggle z1"></span>
                    <div class="hero-information__outer">
                        <div class="container">
                            <div class="hero-information__content">
                                <p class="hero-information__caption">{{ post.story_header[0].caption }}</p>
                                <span class="hero-information__credit">{{ post.story_header[0].credit }}</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% elseif post.story_header[0].type == 'video' %}
            <!-- video hero -->
            <div class="hero hero--story hero--video">
                <div class="hero--video__container">
                    <script type="text/javascript" src="http://content.bitsontherun.com/players/IFdMpi2Y-1VeqOjCu.js"></script>
                </div>

                <div class="hero-information">
                    <span class="icon icon_information hero-information__toggle z1"></span>
                    <div class="hero-information__outer">
                        <div class="container">
                            <div class="hero-information__content">
                                <p class="hero-information__caption">Lorem ipsum dolor sit amet, consectetuer adipiscing elit.</p>
                                <span class="hero-information__credit">Bill Smith / NationSwell</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
    {% elseif post.story_header|length > 1 %}
        <!-- carousel hero -->
        <div class="hero hero--story hero--carousel">
            <div class="carousel carousel--full-width carousel--peek">
                <ul class="carousel__items">
                    {% for  item in post.story_header %}
                        {% if item.type == 'image' %}
                            <li class="carousel-item">
                                <div class="carousel-item__content">
                                    <div class="carousel--peek__image" style="background-image: url({{ item.url|resize(1300, 600) }});"></div>
                                </div>
                            </li>
                        {% endif %}
                    {% endfor %}
                </ul>

                <ul class="carousel__controls">
                    <li class="carousel__control carousel__control--prev">
                        <a class="icon icon_arrow-circle-left"></a>
                    </li>

                    <li class="carousel__control carousel__control--next">
                        <a class="icon icon_arrow-circle-right"></a>
                    </li>
                </ul>
            </div>

            <div class="hero-information">
                <span class="icon icon_information hero-information__toggle z1"></span>
                <div class="hero-information__outer">
                    <div class="container">
                        <div class="hero-information__content">
                            <p class="hero-information__caption">Lorem ipsum dolor sit amet, consectetuer adipiscing elit.</p>
                            <span class="hero-information__credit">Bill Smith / NationSwell</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {%  endif %}

    <div class="story__container">
        <div class="container">
            <div class="story__sticky hide_mobile">
                <div class="story__sticky-container">
                    <div class="sticky-social">
                        <a href="#" class="btn btn--facebook btn--square icon icon_facebook">share</a>
                        <a href="#" class="btn btn--twitter btn--square icon icon_twitter">tweet</a>
                    </div>

                    <div class="sticky-take-action">
                        <div class="indicator indicator--red indicator--take-action icon icon_write"></div>

                        <h4 class="hd-e sticky-take-action__heading">Support the school</h4>
                        <span class="sticky-take-action__action">Write to your Congressman</span>

                        <a href="#" class="btn btn--take-action">Take Action</a>
                    </div>
                </div>
            </div>

            <main class="story__main-column" role="main">
                <article class="story story--page">
                    <header>
                        <h1 class="hd-j story__hed">{{ post.post_title }}</h1>

                        <h3 class="hd-k story__dek">{{ post.dek }}</h3>
                    </header>

                    <div class="story__content">
                        {{post.get_content}}

                    </div>
                </article>

                <div class="story__tags">
                    <ul class="tags-list">
                        <li><a href="#" class="tag">Economy</a></li>
                        <li><a href="#" class="tag">Global</a></li>
                    </ul>
                </div>

                <div class="author cf">
                    <div class="author__a fl">
                        <img src="http://lorempixel.com/134/134" class="author__portrait">

                        <div class="author__contact">
                            <a href="#" class="author__url">www.catcheny.com</a>

                            <ul class="author__social">
                                <li><a href="#" class="icon icon_facebook"></a></li>
                                <li><a href="#" class="icon icon_twitter"></a></li>
                                <li><a href="#" class="icon icon_tumblr"></a></li>
                            </ul>
                        </div>
                    </div>

                    <div class="author__b">
                        <h2 class="hd-n author__byline">Catherine Cheney</h2>
                        <p class="author__bio">Lorem ipsum dolor sit amet, consectetur adipiscing elit. In in consequat enim. Aliquam iaculis porta ornare. Nunc rutrum id elit et consectetur. Duis purus sem, faucibus egestas sem at, tempor posuere enim.</p>
                    </div>
                </div>

                <div class="ad ad--300 ad--pull">
                    <div class="ad__container">
                        <img src="http://placehold.it/300x250"/>
                    </div>
                </div>

                <div class="story__social cf">
                    <a href="#" class="btn btn--bar btn--facebook icon icon_facebook">Follow on Facebook</a>
                    <a href="#" class="btn btn--bar btn--twitter icon icon_twitter">Follow on Twitter</a>
                </div>

                <div class="module module--bg module--red take-action take-action--buy cf">
                    <header>
                        <div class="indicator indicator--blue indicator--module icon icon_write"></div>
                        <h3 class="hd-e module__heading">Take Action</h3>
                    </header>

                    <h2 class="hd-l take-action__heading">Buy a GirlTrek T-Shirt</h2>

                    <div class="take-action__a">
                        <img src="http://lorempixel.com/256/256" class="take-action__img">
                    </div>

                    <div class="take-action__b">
                        <p>Show your support for the group’s mission and buy a superhero-blue GirlTrek t-shirt. Wear it out whenever you go walking in your community, particularly on Saturdays.</p>
                        <a href="#" class="btn btn--solid">Buy now</a>
                    </div>
                </div>

                <ul class="prev-next cf">
                    <li><article class="story story--link">
                            <a href="#" class="link-wrapper">
                                <div class="prev-next__link prev-next__link--prev cf"><span class="icon icon_arrow-circle-left fl"></span> Previous Story</div>
                                <h4 class="hd-o story__hed">Trekkers Featured on Fox</h4>
                            </a>
                        </article></li>

                    <li><article class="story story--link">
                            <a href="#" class="link-wrapper">
                                <div class="prev-next__link prev-next__link--next cf"><span class="icon icon_arrow-circle-right fr"></span> Next Story</div>
                                <h4 class="hd-o story__hed">GirlTrek City Reps Train to Lead Walking Revolution</h4>
                            </a>
                        </article></li>
                </ul>
            </main>

            <aside class="sidebar">
                {{ sidebar_story }}
                {#<div class="ad ad--300">#}
                    {#<div class="ad__container">#}
                        {#<img src="http://placehold.it/300x600"/>#}
                    {#</div>#}
                {#</div>#}
            </aside>
        </div>
    </div>

    <div class="read-next">
        <div class="container">
            <h3 class="hd-g read-next__heading">Read Next</h3>

            <ul class="story-list">
                <li><article class="story story--tease">
                        <a href="#" class="link-wrapper">
                            <figure class="story__feature fl">
                                <img src="http://lorempixel.com/600/330/business"/>
                            </figure>

                            <header class="story__header">
                                <span class="rubric">Economy</span>
                                <h2 class="hd-d story__hed">World Faces “Perfect Storm” Of Problems By 2030</h2>
                                <p class="story__dek">John Beddington talks of a ‘perfect storm’ of food, energy and water shortages converging in 2030. Governments and business are beginning to take action.</p>
                            </header>
                        </a>
                    </article></li>

                <li><article class="story story--tease">
                        <a href="#" class="link-wrapper">
                            <figure class="story__feature fl">
                                <img src="http://lorempixel.com/600/330/people"/>
                            </figure>

                            <header class="story__header">
                                <span class="rubric">Environment</span>
                                <h2 class="hd-d story__hed">Pumping More Solar Power in Sunny New Mexico</h2>
                                <p class="story__dek">New Mexico basks in more than 300 days of sunshine every year, an average that gives it the highest potential for solar energy than almost anywhere else in the country. And yet, in sunny New Mexico, coal is still king.</p>
                            </header>
                        </a>
                    </article></li>

                <li><article class="story story--tease">
                        <a href="#" class="link-wrapper">
                            <figure class="story__feature fl">
                                <img src="http://lorempixel.com/600/330/animals"/>
                            </figure>

                            <header class="story__header">
                                <span class="rubric">Health</span>
                                <h2 class="hd-d story__hed">How Grocery Stores Are Tricking Us to Eat Well</h2>
                                <p class="story__dek">Scientists are getting clever. They want us to buy more fruit at the store, to make us more healthy. How can they trick us into doing that?</p>
                            </header>
                        </a>
                    </article></li>
            </ul>
        </div>
    </div>

{% endblock %}