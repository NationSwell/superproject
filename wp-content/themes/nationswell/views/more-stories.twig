<div class="read-next" data-module='{"name": "more-stories"}'>
    <div class="container">
        <h3 class="hd-g read-next__heading">{{ more_stories_heading_prefix }}</h3>

        <ul class="story-list">
            {% for story in post.more_stories %}
                <li>
                    <article class="story story--tease">
                        <a href="{{ story.permalink }}" class="link-wrapper" data-track='{"position": {{ loop.index }}}'>
                            <figure class="story__feature fl">
                                <img src="{{ story.thumbnail.src|resize(600, 330) }}" alt="{{ story.thumbnail._wp_attachment_image_alt }}" data-pin-no-hover="true"/>
                            </figure>

                            <header class="story__header">
                                <span class="rubric">{{ story.category }}</span>
                                <h2 class="hd-u story__hed">{{ story.post_title }}</h2>
                                <p class="story__dek">{{ story.dek }}</p>
                            </header>
                        </a>
                    </article>
                </li>
            {% endfor %}
        </ul>
    </div>
</div>