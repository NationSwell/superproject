<figure class="multimedia multimedia--image">

    <h3 class="hd-m multimedia__heading">{{ title }}</h3>

    <div class="multimedia__content">
        <img src="{{ image.get_src|resize(800, 0) }}" alt="{{ alt_text }}">
    </div>

    <figcaption class="cf">
        <span class="caption">{{ caption }}</span>
        <span class="credit">{{ credit }}</span>
    </figcaption>
</figure>