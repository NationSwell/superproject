<div id="flyout" data-cookie="flyout" data-module='{"name": "flyout:facebook"}'>
    <header>
        <h4 class="icon icon_nationswell-flag hd-s flyout__heading">{{ flyout_header_text }}</h4>
        <button class="btn btn--close icon icon_close" data-flyout-action="close" data-track='{"action": "close"}'></button>
    </header>

    <div class="flyout__content">
        <p>{{ flyout_message_text }}</p>

        <div class="fb-like" data-href="{{ facebook_like_url }}" data-width="450" data-layout="standard" data-action="like" data-show-faces="false" data-share="false" data-ref="flyout" data-module='{"name": "flyout:facebook"}'></div>
    </div>
</div>
